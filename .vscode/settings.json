{
  "runOnSave.statusMessageTimeout": 3000,
  "runOnSave.commands": [
    {
        "match": ".*\\.(md|yaml|css)$",
        "command": "cd ${workspaceFolder} && sh update.sh",
        "runIn": "terminal",
        "runningStatusMessage": "Compiling ${fileBasename}",
        "finishStatusMessage": "${fileBasename} compiled"
    },
  ]
}